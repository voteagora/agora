{
  "private": true,
  "version": "0.1.0",
  "name": "nouns-agora-backend",
  "scripts": {
    "build-post-discord-updates": "esbuild --bundle --sourcemap src/bin/postDiscordUpdates.ts --platform=node --outfile=dist/postDiscordUpdates.js",
    "post-discord-updates": "node dist/postDiscordUpdates.js",
    "build-generate-schema": "esbuild --bundle --sourcemap src/bin/generateSchema.ts --outfile=dist/generateSchema.js --loader:.graphql=text",
    "generate-schema": "node dist/generateSchema.js > ../frontend/schema.graphql",
    "generate-snapshot": "yarn run generate && ts-node src/bin/generateSnapshot.ts",
    "build-dump": "esbuild --bundle --platform=node src/bin/dumpNamespace.ts --outfile=dist/dump.js",
    "dump": "node dist/dump.js",
    "build-server": "esbuild --bundle --sourcemap src/bin/server.ts --outfile=dist/server.js --loader:.graphql=text --platform=node",
    "server": "node dist/server.js",
    "generate-typechain": "typechain --target ethers-v5 --out-dir src/contracts/generated src/contracts/abis/*.json",
    "generate-schema-types": "graphql-codegen",
    "generate": "yarn run generate-typechain && yarn run generate-schema-types",
    "build-worker": "node scripts/buildWorker.js",
    "visualize-worker-bundle": "esbuild-visualizer ---metadata ./dist/meta.json",
    "fetch-schema": "get-graphql-schema https://api.thegraph.com/subgraphs/name/nounsdao/nouns-subgraph > ./src/schemas/nouns-subgraph.graphql",
    "build": "yarn run generate && yarn build-server",
    "start": "yarn build && yarn run server",
    "test": "jest"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.2.0",
    "@cloudflare/workers-honeycomb-logger": "^2.3.3",
    "@envelop/core": "^2.6.0",
    "@envelop/response-cache": "^3.2.0",
    "@graphql-codegen/cli": "^2.12.0",
    "@graphql-codegen/typescript-resolvers": "^2.7.3",
    "@graphql-tools/batch-execute": "^8.5.5",
    "@graphql-tools/delegate": "^9.0.4",
    "@graphql-tools/merge": "^8.3.4",
    "@graphql-tools/stitch": "^8.7.7",
    "@graphql-yoga/node": "^2.13.12",
    "discord-api-types": "^0.37.15",
    "get-graphql-schema": "^2.1.2",
    "graphql": "^16.6.0",
    "marked": "^4.1.0",
    "node-fetch": "^3.2.10",
    "toucan-js": "^2.6.1",
    "wrangler": "^2.1.11",
    "zod": "3.14.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.16.0",
    "@envelop/apollo-tracing": "^3.6.0",
    "@graphql-yoga/common": "^2.12.11",
    "@typechain/ethers-v5": "^10.1.0",
    "@types/dedent": "^0.7.0",
    "@types/jest": "^29.0.1",
    "@types/marked": "^4.0.6",
    "@types/node": "^18.7.18",
    "dedent": "^0.7.0",
    "esbuild": "^0.15.7",
    "esbuild-plugin-copy": "^1.3.0",
    "esbuild-plugin-wasm-pack": "^1.1.0",
    "esbuild-visualizer": "^0.3.1",
    "jest": "^29.0.3",
    "jest-junit": "^14.0.1",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.8.4"
  }
}
